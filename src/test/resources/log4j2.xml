<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">

<Properties>
<Property name="basPath">./logs</Property>

</Properties>

  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
    
     <RollingFile name="File" fileName="${basePath}/automation.log" filePattern="${basePath}/automation.log-%d{yyyy-MM-dd}.log">
            <PatternLayout pattern=" %d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msgn%n"/>
        
          
              
                <SizeBasedTriggeringPolicy size="5000"/>
               
                
                 </RollingFile>
                
  </Appenders>
  <Loggers>
  
   
    <Root level="INFO">
    
    <!--  ppenderRef ref="Console"/>  -->
      <AppenderRef ref="File"/>
      
      
    </Root>
  </Loggers>
</Configuration>